{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "moduleResolution": "bundler",
    "types": ["vite/client"],

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false
  },
  "include": ["src"]
}
